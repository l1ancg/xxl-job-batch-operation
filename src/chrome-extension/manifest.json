{
  "manifest_version": 3,
  "name": "XXL-JOB Batch Operation",
  "version": "1.0.0",
  "description": "Batch start/stop operations for XXL-JOB tasks",
  "action": {
    "default_popup": "src/chrome-extension/popup/index.html"
  },
  "options_page": "src/chrome-extension/options/index.html",
  "background": {
    "service_worker": "src/chrome-extension/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/chrome-extension/content/index.tsx"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "icons": {
    "16": "src/chrome-extension/public/16.png",
    "32": "src/chrome-extension/public/32.png",
    "48": "src/chrome-extension/public/48.png",
    "192": "src/chrome-extension/public/192.png"
  }
}
